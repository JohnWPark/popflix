<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Read a Review, Leave a Review</h1>
    <p>Wayfarers hella fashion axe, chicharrones gochujang ennui kitsch. Salvia man braid XOXO authentic, fingerstache plaid letterpress four dollar toast brooklyn asymmetrical schlitz post-iro.</p>
    <p><%= link_to "Sign Up To Write a Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>
